{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".eslintrc.json", "tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "@ntp/data#build": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
