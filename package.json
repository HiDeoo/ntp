{
  "name": "@ntp/monorepo",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Lightweight New Tab Page displaying Pixabay videos",
  "author": "HiDeoo <github@hideoo.dev> (https://hideoo.dev)",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@hideoo/eslint-config": "0.13.0",
    "@hideoo/prettier-config": "0.1.1",
    "@hideoo/tsconfig": "0.1.0",
    "eslint": "8.29.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "prettier": "2.8.0",
    "turbo": "1.6.3",
    "typescript": "4.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@7.18.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  },
  "private": true,
  "sideEffects": false,
  "keywords": [
    "new tab page",
    "ntp",
    "pixabay",
    "video",
    "browser",
    "extension",
    "edge",
    "chrome"
  ],
  "homepage": "https://github.com/HiDeoo/ntp",
  "repository": {
    "type": "git",
    "url": "https://github.com/HiDeoo/ntp.git"
  },
  "bugs": "https://github.com/HiDeoo/ntp/issues",
  "prettier": "@hideoo/prettier-config",
  "lint-staged": {
    "**/*": "prettier -w -u --cache",
    "**/*.{js,jsx,ts,tsx,cjs,mjs}": "eslint --cache --max-warnings=0"
  }
}
